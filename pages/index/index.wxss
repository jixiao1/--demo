.swiper_img_item {
  height: 400rpx;
}
.item_img {
  display: block;
  width: 100%;
  height: 100%;
}
.search {
  width: 100%;
  height: 88rpx;
  background-color: white;
  position: relative;
  text-align: center;
  box-sizing: border-box;
  padding-top: 14rpx;
}
.search>input {
  display: inline-block;
  width: 690rpx;
  height: 60rpx;
  background: #EFEFEF;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #808080;
  padding-left: 60rpx;
  box-sizing: border-box;
  text-align: left;
}
.search>image {
  position: absolute;
  top: 30rpx;
  left: 50rpx;
  width: 28rpx;
  height: 28rpx;
}
.fliter {
  display: flex;
  line-height: 80rpx;
  height: 80rpx;
  background-color: #fff;
}
.filter_item {
  flex: 1;
  text-align: center;
  font-size: 26rpx;
  color: #808080;
}
.filter_item image {
  display: inline-block;
  width: 20rpx;
  height: 12rpx;
  vertical-align: middle;
}